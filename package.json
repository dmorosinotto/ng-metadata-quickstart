{
  "name": "ng-metadata-quickstart",
  "version": "1.4.0",
  "description": "Sample project quickstart using ngMetadata",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm run typings -- install",
    "start": "npm run build  &  npm run serve",
    "build": "npm run watchify -- app/startup.ts --debug --plugin=tsify --outfile dist/app-bundle.js  --verbose",
    "prebuild": "npm run clear:dist  &&  npm run lint",
    "serve": "node node_modules/.bin/http-server -p 8080 -c-1 --cors",
    "preserve": "npm run copy:dist",
    "lint": "node node_modules/.bin/tslint --config tslint.json app/*.ts app/**/*.ts",
    "prod": "npm run browserify -- app/startup.ts --plugin=tsify --outfile dist/app-bundle.js",
    "preprod": "npm run clear:dist  &&  npm run copy:dist  &&  npm run angular:min",
    "clean": "node node_modules/.bin/rimraf dist typings node_modules",
    "angular:min": "echo \"require('./angular.min'); module.exports = angular;\" > node_modules/angular/index.js",
    "clear:dist": "node node_modules/.bin/rimraf dist  &&  mkdir dist",
    "copy:dist": "node node_modules/.bin/copyfiles -u 1 app/**/*.css app/**/*.jpg app/**/*.html dist",
    "watchify": "node node_modules/.bin/watchify",
    "browserify": "node node_modules/.bin/browserify",
    "typings": "node node_modules/.bin/typings"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmorosinotto/ng-metadata-quickstart.git"
  },
  "keywords": [
    "ngMetadata",
    "Angular",
    "Typescript",
    "Browserify"
  ],
  "author": "Daniele Morosinotto",
  "contributors": [
    "Michael de Lang <kingoipo@gmail.com> (https://github.com/oipo/)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dmorosinotto/ng-metadata-quickstart/issues"
  },
  "homepage": "https://github.com/dmorosinotto/ng-metadata-quickstart#readme",
  "dependencies": {
    "angular": "^1.5.5",
    "ng-metadata": "^1.11.0",
    "reflect-metadata": "^0.1.3"
  },
  "devDependencies": {
    "browserify": "^13.0.1",
    "concurrently": "^2.1.0",
    "copyfiles": "^0.2.1",
    "http-server": "^0.9.0",
    "rimraf": "^2.5.2",
    "tsify": "^0.15.5",
    "tslint": "^3.10.2",
    "typescript": "^1.8.10",
    "typings": "^0.8.1",
    "watchify": "^3.7.0"
  }
}
